{
    "data": {
        "train_test_split": 0.2,
        "validation_split": 0.1,
        "sequence_length": 30,
        "target_column": "units_sold",
        "date_column": "date"
    },
    "preprocessing": {
        "handle_missing": true,
        "handle_outliers": true,
        "scaling": "minmax",
        "encoding": "label"
    },
    "features": {
        "time_features": [
            "year",
            "month",
            "day",
            "day_of_week",
            "day_of_year",
            "week_of_year",
            "is_weekend",
            "is_month_end"
        ],
        "categorical_features": [
            "product_category",
            "store_location"
        ],
        "numerical_features": [
            "price",
            "promotion_discount",
            "stock_level"
        ]
    },
    "models": {
        "xgboost": {
            "n_estimators": 1000,
            "max_depth": 7,
            "learning_rate": 0.01,
            "subsample": 0.8,
            "colsample_bytree": 0.8,
            "random_state": 42
        },
        "prophet": {
            "seasonality_mode": "multiplicative",
            "yearly_seasonality": true,
            "weekly_seasonality": true,
            "daily_seasonality": true,
            "changepoint_prior_scale": 0.05,
            "seasonality_prior_scale": 10.0
        },
        "lstm": {
            "architecture": {
                "layers": [
                    {
                        "type": "LSTM",
                        "units": 100,
                        "activation": "relu",
                        "return_sequences": true
                    },
                    {
                        "type": "Dropout",
                        "rate": 0.2
                    },
                    {
                        "type": "LSTM",
                        "units": 50,
                        "activation": "relu"
                    },
                    {
                        "type": "Dropout",
                        "rate": 0.2
                    },
                    {
                        "type": "Dense",
                        "units": 1
                    }
                ]
            },
            "training": {
                "epochs": 50,
                "batch_size": 32,
                "optimizer": {
                    "type": "Adam",
                    "learning_rate": 0.001
                },
                "loss": "mse",
                "metrics": ["mae", "mse"]
            }
        }
    },
    "ensemble": {
        "weights": {
            "xgboost": 0.4,
            "prophet": 0.3,
            "lstm": 0.3
        }
    },
    "paths": {
        "raw_data": "data/raw",
        "processed_data": "data/processed",
        "models": "models",
        "predictions": "data/predictions",
        "logs": "logs"
    }
} 